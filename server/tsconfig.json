{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./", // Set the base directory for module resolution
    "paths": {
      "@/*": ["src/*"] // Map the '@' alias to the 'src' directory
    }
  },
  "include": ["src/**/*", "src/server.ts"],
  "exclude": ["node_modules"]
}